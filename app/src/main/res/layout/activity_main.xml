<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_curve"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="MainActivity"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="133dp"
        android:layout_height="290dp"
        android:paddingLeft="25dp"
        android:paddingTop="120dp"
        android:src="@drawable/guess_g" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:paddingTop="136dp"
        android:text="UESS me?"
        android:textColor="#E2A35B"
        android:textSize="90sp" />


</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Start"
        android:id="@+id/button_start"
        android:textSize="30sp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="32dp"
        android:layout_above="@+id/button_howToPlay"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg_round"
        android:textColor="#FF5722" />



    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="How to play?"
        android:id="@+id/button_howToPlay"
        android:textSize="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg_round"
        android:textColor="#FF5722" />
    </LinearLayout>
    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="About"
        android:id="@+id/aboutbutton"
        android:textSize="30dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="119dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_start"
        android:layout_alignStart="@+id/button_start"
        android:background="@drawable/button_bg_round"
        android:textColor="#FF5722" />
</LinearLayout>
