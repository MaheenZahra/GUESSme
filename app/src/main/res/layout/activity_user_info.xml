<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_curve"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInfoActivity">
    <EditText
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textColor="#0E0D0D"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="90dp"
        android:hint="Enter Name"
        android:textSize="20sp"
        android:textColorHighlight="#E65100"
        android:tooltipText="Enter your name here"
        android:padding="20dp"
        android:textColorHint="#A09F9F"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/DOB"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="13dp"
            android:hint="Enter Date of Birth"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHighlight="#BF360C"
            android:textColorHint="#A09F9F"
            android:textSize="20sp"
            android:inputType="date"
            android:tooltipText="DD/MM/YY" />

        <ImageView
            android:id="@+id/pickDate"
            android:layout_width="34dp"
            android:layout_height="52dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/calender" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="87dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="31dp"
        android:background="#0CB9C0"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>